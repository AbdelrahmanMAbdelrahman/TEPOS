
@{
    ViewBag.Title = "Current Stock";
}

<link href="~/Content/Custom/Report/CurrentStock.css" rel="stylesheet" />
<script src="~/Scripts/Custom/Report/Stock/CurrentStock.js"></script>

<div class="page-inner w100">
    <div class="row">
        <div class="col-md-7 offset-2 text-right text-center">
            <div class="main-card card">
                <div class="card-header">
                    <div class="d-flex align-items-center">
                        <h4 class="card-title">
                            @HttpContext.GetGlobalResourceObject("Local", "Current Stock")
                        </h4>
                    </div>
                </div>
                <div class="card-body">
                    <div class="col-md-12 form-horizontal">
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "Branch Name")
                            </label>
                            <div class="col-md-8">
                                <select id="cmbBranch" multiple="multiple" class="form-control input-full"></select>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "Location")
                            </label>
                            <div class="col-md-8">
                                <select id="cmbstockType" class="form-control input-full"></select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "Stock Value As")
                            </label>
                            <div class="col-md-8">
                                <select id="cmbstockValueAs" class="form-control input-full">
                                    <option value="1">
                                        @HttpContext.GetGlobalResourceObject("Local", "Purchase Rate")
                                    </option>
                                    <option value="2">
                                        @HttpContext.GetGlobalResourceObject("Local", "Selling Rate")
                                    </option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "Category")
                            </label>
                            <div class="col-md-8">
                                <select id="cmbProductCategory" class="form-control input-full"></select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "Min Stock Quantity")
                            </label>
                            <div class="col-md-8">
                                <input type="number" id="txtMinStockQuantity" class="form-control input-full"
                                       placeholder=@HttpContext.GetGlobalResourceObject("Local","Enter minimum stock quantity") />
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "Item Status")
                            </label>
                            <div class="col-md-8">
                                <select id="cmbitemStatus" class="form-control input-full" disabled="disabled">
                                    <option value="true">
                                        @HttpContext.GetGlobalResourceObject("Local", "Active Item")
                                    </option>
                                    <option value="false">
                                        @HttpContext.GetGlobalResourceObject("Local", "InActive Item")
                                    </option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "Batch Status")
                            </label>
                            <div class="col-md-8">
                                <select id="cmbbatchStatus" class="form-control input-full" disabled="disabled">
                                    <option value="true">
                                        @HttpContext.GetGlobalResourceObject("Local", "Active Batch")
                                    </option>
                                    <option value="false">
                                        @HttpContext.GetGlobalResourceObject("Local", "InActive Batch")
                                    </option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <label class="col-md-3">
                                @HttpContext.GetGlobalResourceObject("Local", "With Batch")
                            </label>
                            <div class="col-md-8">
                                <label class="containerChkbox">
                                    <input type="checkbox" id="chkWithBatch" checked>
                                    <label class="checkmarkChkbox" for="chkWithBatch"></label>
                                    <span class="checkboxLbl">
                                        @HttpContext.GetGlobalResourceObject("Local", "Include Batch in Report")
                                    </span>
                                </label>
                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <div class="offset-3 col-md-8">
                                <label class="containerChkbox">
                                    <input type="checkbox" id="chkIncludingZeroStock">
                                    <label class="checkmarkChkbox" for="chkIncludingZeroStock"></label>
                                    <span class="checkboxLbl">
                                        @HttpContext.GetGlobalResourceObject("Local", "Including Zero Stock")
                                    </span>
                                </label>
                            </div>
                        </div>
                        <div class="form-group form-inline control-group">
                            <div class="offset-3 col-md-8">
                                <label class="containerChkbox">
                                    <input type="checkbox" id="ckbOnlyZeroStock">
                                    <label class="checkmarkChkbox" for="ckbOnlyZeroStock"></label>
                                    <span class="checkboxLbl">
                                        @HttpContext.GetGlobalResourceObject("Local", "Only Zero Stock")
                                    </span>
                                </label>


                            </div>
                        </div>

                        <div class="form-group form-inline control-group">
                            <div class="col-md-8 offset-3 optButton">
                                <div align="center" class="btn-group w100">
                                    <button id="btnClear" type="button" class="btn btn-primary w-45">
                                        <i class="fas fa-eraser"></i>
                                        @HttpContext.GetGlobalResourceObject("Local", "Clear")
                                    </button>
                                    <button id="btnPreview" type="button" value=@HttpContext.GetGlobalResourceObject("Local", "Preview") class="btn btn-success w-55">
                                        <i class="fas fa-eye"></i> @HttpContext.GetGlobalResourceObject("Local", "Preview")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>