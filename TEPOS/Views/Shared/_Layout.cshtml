
<!DOCTYPE html>
<html lang="@System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName"
      @*dir="ltr"*@
      dir="@(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "rtl" : "ltr")"
      >

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Trend-POS</title>
    <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />

    <!-- Fonts and icons-->
    @Scripts.Render("~/bundles/WebFont")


    @*<script src="@Url.Content("~/Scripts/app.js?v=1.0.1")"></script>
        <script src="@Url.Content("~/Scripts/app.js?v=" + DateTime.Now.Ticks)"></script>*@

    <script>
        WebFont.load({
            google: {
                "families": ["Lato:300,400,700,900"]
            },
            custom: {
                "families": ["Flaticon", "Font Awesome 5 Solid", "Font Awesome 5 Regular",
                    "Font Awesome 5 Brands", "simple-line-icons"
                ],
                urls: ["../Scripts/lib/assets/css/fonts.min.css"]
            },
            active: function () {
                sessionStorage.fonts = true;
            }
        });

    </script>

    <!--CSS Files-->
    @Styles.Render("~/CustomCSS/TCommonCss")

    <!--Jquery JS-->
    @Scripts.Render("~/bundles/jquery")

    <!--   Core JS Files   -->
    @Scripts.Render("~/bundles/CoreJSFiles")

    <!-- jQuery UI -->
    @Scripts.Render("~/bundles/jQueryUI")

    @Scripts.Render("~/bundles/modernizr")

    <!-- jQuery Scrollbar,Datatables,notify JS,Theme color settings, don't include it in your project!,JQ bootstrap validation -->
    @Scripts.Render("~/bundles/BjqueryCmn")

    <!-- select chosen -->
    @Styles.Render("~/CustomCSS/SelectChosen")
    @Scripts.Render("~/bundles/SelectChosen")

    <!-- Datetime picker -->
    @Styles.Render("~/CustomCSS/DateTimePicker")
    @Scripts.Render("~/bundles/DateTimePicker")


</head>
@using ERP.Controllers.Manager
@using ERP.Controllers.POS.Gateway
@using ERP.Controllers.Security.Manager
@using ERP.Models.Security
@using ERP.CSharpLib
@{
    ErpManager erpManager = new ErpManager();
    var listOfBranchStockTransferNotification = new NotificationGateway().GetListOfBranchTransferStockInvoice(new ErpManager().UserOffice);
    SecUser userInfo = new UserManager().UserLoginInfo();
    var listOfResource = new SecurityManager().ResourcePermissionList();

}

<body class="@(System.Threading.Thread.CurrentThread.CurrentUICulture.TwoLetterISOLanguageName == "ar" ? "rtl" : "ltr")">
    <div id="process_notifi" class="wrapper">
        <div class="main-header">
            <!-- Logo Header -->
            <div class="logo-header" data-background-color="blue">

                <a href="/PosDashBoard/PosDashBoard?moduleId=2" class="logo">
                    <img src="/Photos/logo.png" alt="navbar brand" class="navbar-brand" />
                </a>
                <button class="navbar-toggler sidenav-toggler ml-auto" type="button" data-toggle="collapse"
                        data-target="collapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon">
                        <i class="icon-menu"></i>
                    </span>
                </button>
                <button class="topbar-toggler more">
                    <i class="icon-options-vertical"></i>
                </button>
                <div class="nav-toggle">
                    <button class="btn btn-toggle toggle-sidebar">
                        <i class="icon-menu"></i>
                    </button>
                </div>
            </div>
            <!-- End Logo Header -->
            <!-- Navbar Header -->
            <nav class="navbar navbar-header navbar-expand-lg" data-background-color="blue2">

                <div class="container-fluid">
                    <div class="collapse" id="search-nav">
                        <form class="navbar-left navbar-form nav-search mr-md-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <button type="submit" class="btn btn-search pr-1">
                                        <i class="fa fa-search search-icon"></i>
                                    </button>
                                </div>
                                <input type="text" placeholder="@HttpContext.GetGlobalResourceObject("Local", "Search") ..." class="form-control" />
                            </div>
                        </form>
                    </div>


                    @*<a href="@Url.Action("ChangeCulture", "Home", new { Culture = "en-US" })" class="text-white ml-3">English</a>
                    <a href="@Url.Action("ChangeCulture", "Home", new { Culture = "ar-EG" })" class="text-white ml-2">العربية</a>*@

                    <a href="@Url.Action("ChangeCulture", "Home", new { culture = "en-US", returnUrl = Request.RawUrl })" class="text-white ml-3">English</a>
                    <a href="@Url.Action("ChangeCulture", "Home", new { culture = "ar-EG", returnUrl = Request.RawUrl })" class="text-white ml-2">العربية</a>
                    <ul class="navbar-nav topbar-nav ml-md-auto align-items-center">
                        <li class="nav-item toggle-nav-search hidden-caret">
                            <a class="nav-link" data-toggle="collapse" href="#search-nav" role="button"
                               aria-expanded="false" aria-controls="search-nav">
                                <i class="fa fa-search"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown hidden-caret">
                            <a class="nav-link dropdown-toggle" href="" id="messageDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-envelope"></i>
                            </a>
                            <ul class="dropdown-menu messages-notif-box animated fadeIn"
                                aria-labelledby="messageDropdown">
                                <li>
                                    <div class="dropdown-title d-flex justify-content-between align-items-center">
                                        @HttpContext.GetGlobalResourceObject("Local", "Messages")
                                        <a href="#" class="small">@HttpContext.GetGlobalResourceObject("Local", "Mark All As Read")</a>
                                    </div>
                                </li>
                                <li>
                                    <div class="message-notif-scroll scrollbar-outer">
                                        <div class="notif-center">
                                            <a href="#">
                                                <div class="notif-img">
                                                    <img src="/Photos/ManAvater.png"
                                                         alt=@HttpContext.GetGlobalResourceObject("Local","Img Profile") />
                                                </div>
                                                <div class="notif-content">
                                                    <span class="subject">Jimmy Denis</span>
                                                    <span class="block">
                                                        @HttpContext.GetGlobalResourceObject("Local", "How Are You?")
                                                    </span>
                                                    <span class="time">@HttpContext.GetGlobalResourceObject("Local", "5 Minutes Ago")</span>
                                                </div>
                                            </a>
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    <a class="see-all" href="javascript:void(0);">
                                        @HttpContext.GetGlobalResourceObject("Local", "See All Messages")
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown hidden-caret">
                            <a class="nav-link dropdown-toggle" id="notifDropdown" href="" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-bell"></i>
                                <span class="notification">@listOfBranchStockTransferNotification.Count</span>
                            </a>
                            <ul class="dropdown-menu notif-box animated fadeIn" aria-labelledby="notifDropdown">
                                <li>
                                    <div class="dropdown-title" id="divNotification">
                                        @HttpContext.GetGlobalResourceObject("Local", "You Have") @listOfBranchStockTransferNotification.Count @HttpContext.GetGlobalResourceObject("Local",
"New Notification")
                                    </div>
                                </li>
                                <li>
                                    <div class="notif-center">
                                        @foreach (var inv in listOfBranchStockTransferNotification)
                                        {
                                            <a href="/PosStock/GoToPurchaseReceiptForStockTransfer?invNo=@inv.InvoiceNumber">
                                                <div class="notif-icon notif-success">
                                                    <i class="fa fa-comment"></i>
                                                </div>
                                                <div class="notif-content">
                                                    <span class="block">
                                                        @HttpContext.GetGlobalResourceObject("Local", "Invoice No"): @inv.InvoiceNumber (@inv.InvDate.ToString("dd-MM-yyyy"))
                                                    </span>
                                                    <span class="time">
                                                        @{ var totalMinute = (UTCDateTime.BDDateTime() - inv.CreatedDate).TotalMinutes; }
                                                        @Convert.ToInt32(totalMinute)@HttpContext.GetGlobalResourceObject("Local", "Minutes ago")
                                                    </span>
                                                </div>
                                            </a>
                                        }


                                    </div>
                                </li>
                                <li>
                                    <a class="see-all" href="javascript:void(0);">
                                        @HttpContext.GetGlobalResourceObject("Local", "See All Notifications")
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown hidden-caret">
                            <a class="nav-link" data-toggle="dropdown" href="" aria-expanded="false">
                                <i class="fas fa-layer-group"></i>
                            </a>
                            <div class="dropdown-menu quick-actions quick-actions-info animated fadeIn">
                                <div class="quick-actions-header">
                                    <span class="title mb-1">@HttpContext.GetGlobalResourceObject("Local", "Quick Actions")</span>
                                    <span class="subtitle op-8">@HttpContext.GetGlobalResourceObject("Local", "Shortcuts")</span>
                                </div>
                                <div class="quick-actions-scroll scrollbar-outer">
                                    <div class="quick-actions-items">
                                        <div class="row m-0">
                                            <a class="col-6 col-md-4 p-0" href="/Pos/Billing">
                                                <div class="quick-actions-item">
                                                    <i class="flaticon-file-1"></i>
                                                    <span class="text">@HttpContext.GetGlobalResourceObject("Local", "Create New Bill")</span>
                                                </div>
                                            </a>
                                            <a class="col-6 col-md-4 p-0" href="/Home/DatabaseBackup">
                                                <div class="quick-actions-item">
                                                    <i class="flaticon-database"></i>
                                                    <span class="text">@HttpContext.GetGlobalResourceObject("Local", "Database Backup")</span>
                                                </div>
                                            </a>
                                            <a class="col-6 col-md-4 p-0" href="/PosSetting/Customer">
                                                <div class="quick-actions-item">
                                                    <i class="far fa-user"></i>
                                                    <span class="text">@HttpContext.GetGlobalResourceObject("Local", "Add New Customer")</span>
                                                </div>
                                            </a>
                                            <a class="col-6 col-md-4 p-0" href="/PosStock/PurchaseReceipt">
                                                <div class="quick-actions-item">
                                                    <i class="flaticon-file"></i>
                                                    <span class="text">@HttpContext.GetGlobalResourceObject("Local", "Purchase Receipt")</span>

                                                </div>
                                            </a>
                                            <a class="col-6 col-md-4 p-0" href="/RptSales/TotalSalesSummary">
                                                <div class="quick-actions-item">
                                                    <i class="far fa-file-pdf"></i>
                                                    <span class="text">@HttpContext.GetGlobalResourceObject("Local", "Sales Summary")</span>
                                                </div>
                                            </a>
                                            <a class="col-6 col-md-4 p-0" href="/Pos/CustomerDueCollection">
                                                <div class="quick-actions-item">
                                                    <i class="far fa-money-bill-alt"></i>
                                                    <span class="text">
                                                        @HttpContext.GetGlobalResourceObject("Local", "Due Collection")
                                                    </span>
                                                </div>

                                            </a>



                                        </div>
                                    </div>

                                </div>

                            </div>

                        </li>

                        <li class="nav-item dropdown hidden-caret">
                            <a class="dropdown-toggle profile-pic" data-toggle="dropdown" href=""
                               aria-expanded="false">
                                <div class="avatar-sm">
                                    <img src="/Photos/ManAvater.png" alt="image profile" class="avatar-img rounded-circle" />
                                </div>
                            </a>
                            <ul class="dropdown-menu dropdown-user animated fadeIn">
                                <div class="dropdown-user-scroll scrollbar-outer">
                                <li>
                                    <div class="user-box">
                                        <div class="avatar-lg">
                                            <img src="/Photos/ManAvater.png" alt="image profile" class="avatar-img rounded-circle" />
                                        </div>
                                        <div class="u-text">
                                            <h4>@userInfo.LoginName</h4>
                                            <p class="text-muted">@userInfo.Email</p>
                                            @* <a href="#" class="btn btn-xs btn-secondary btn-sm">Change Photo</a>*@  @*Adel*@
                                        </div>
                                    </div>
                                </li>
                                <li>
                                    @*Adel*@
                                    @*<div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">My Profile</a>
                        <a class="dropdown-item" href="#">My Balance</a>
                        <a class="dropdown-item" href="#">Inbox</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="#">Change Password</a>*@
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="/Security/Logout">@HttpContext.GetGlobalResourceObject("Local", "Logout")</a>
                                </li>
                </div>
                </ul>
                </li>
                </ul>
        </div>
        </nav>
        <!-- End Navbar -->
    </div>
    <!-- Sidebar -->
    <div class="sidebar sidebar-style-2">

        <div class="sidebar-wrapper scrollbar scrollbar-inner">
            <div class="sidebar-content">
                <div class="user">
                    <div class="avatar-sm float-left mr-2">
                        <img src="/Photos/ManAvater.png" alt="image profile" class="avatar-img rounded-circle" />

                    </div>
                    <div class="info">
                        <a data-toggle="collapse" href="#collapseExample" aria-expanded="true">
                            <span>
                                @userInfo.LoginName
                                <span class="user-level">@userInfo.Email</span>
                            </span>
                        </a>
                        <div class="clearfix"></div>

                    </div>
                </div>
                <ul class="nav nav-primary">

                    @foreach (var rp in listOfResource.Where(w => w.Level == 1).OrderBy(o => o.Level))
                    {
                        <li class="nav-item">
                            <a data-toggle="collapse" href="#base_@rp.Id" class="collapsed"
                               aria-expanded="false">
                                <i class="@rp.Icon"></i>
                                <p>

                                    @HttpContext.GetGlobalResourceObject("Local", rp.DisplayName)
                                </p>
                                <span class="caret"></span>
                            </a>
                            <div class="collapse" id="base_@rp.Id">
                                <ul class="nav nav-collapse">
                                    @foreach (var rp1 in listOfResource.Where(w => w.Level == rp.SecResourceId).OrderBy(o => o.Serial))
                                    {
                                        List<int> resId = new List<int>() { 15, 26 }; //15=billing,26=stock transfer
                                        if (!resId.Contains(rp1.SecResourceId) || erpManager.UserOffice.Count <= 1)
                                        {
                                            var resLvl2 = listOfResource.Where(w => w.Level == rp1.SecResourceId);
                                            if(rp1.DisplayName == "Zero Stock Items" || rp1.DisplayName == "Expirated Items")
                                            {
                                                <li>
                                                  <a href="@string.Format("{0}?BranchId={1}", rp1.Method, userInfo.Id)">
                                                      <span class="sub-item"> @HttpContext.GetGlobalResourceObject("Local", rp1.DisplayName)</span>
                                                  </a>
                                                </li>
                                            }
                                            else
                                            {
                                                <li>
                                                    <a href="@rp1.Method">

                                                        <span class="sub-item"> @HttpContext.GetGlobalResourceObject("Local", rp1.DisplayName)</span>
                                                    </a>
                                                </li>
                                            }


                                        }
                                    }
                                </ul>
                            </div>
                        </li>
                    }
                     
                    <li class="nav-item">
                        <a href="/Home/SoftwareShortcutKey">
                            <i class="far fa-keyboard"></i>
                            <p>@HttpContext.GetGlobalResourceObject("Local", "Keyboard Shortcuts")</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main-panel">
        <div class="content body-content position-relative" id="process_notifi">
            @{
                <div id="minDivLayout" class="position-relative">
                    <div style="margin-left: 2px;">@RenderBody()</div>
                </div>
            }
        </div>

    </div>


    </div>


</body>

</html>
